<header class= "header site-header"> 
    <div class= "header-pane">
        <section class= "contacts"> 
            <h3 class= "heading header-heading contacts-heading">Reach Us</h3> 

            <p class= "working-hours">
                Every Day<span class= "hours">The Whole Day</span> 
            </p> 

            <div class= "user-action select-action select-phone contact phone">
                <a class= "button contacts-button header-contacts-button contacts-button-phone" href= "#phone-select-panel">
                    Give Us <strong>A Call </strong> 
                </a> 

                <div class= "user-action-panel select-action-panel" id= "phone-select-panel"> 
                    <a class= "button close-button user-action-button user-action-close-button" href= "#" >
                        <span class= "button-text">Close</span> 
                    </a> 

                    <div class= "user-action-panel-main"> 
                        <h3 class= "heading user-action-panel-heading">Call Us</h3> 

                        {% include select-button-list.liquid 
                            namespace = "phone" 
                            button_list = site.data.phone_select_list 
                        %} 
                    </div> 
                </div>
            </div> 

            <div class= "user-action form-action send-message contact email"> 
                <a class= "button contacts-button header-contacts-button contacts-button-email" href= "#send-message-panel"> 
                    Write <strong>A Message </strong> 
                </a> 

                <div class= "user-action-panel form-panel send-message-panel" id= "send-message-panel"> 
                    <a class= "button close-button user-action-button user-action-close-button" href= "#" >
                        <span class= "button-text">Close</span>
                    </a> 

                    <div class= "user-action-panel-main"> 
                        <h3 class= "heading user-action-panel-heading">Write A Message</h3> 
                        
                        <form class= "form user-action-form send-message-form" action= "" method= "post">
                            <div class= "form-field sender-name-field">
                                <label for= "sender-name" class= "field-label">Your Name</label> 
                                <input class= "form-field-body" type= "text" name= "sender-name" id= "sender-name" /> 
                            </div> 

                            <div class= "form-field sender-email-field">
                                <label for= "sender-email" class= "field-label">Your Email</label> 
                                <input class= "form-field-body" type= "text" name= "sender-email" id= "sender-email" /> 
                            </div> 

                            <div class= "form-field sender-message-field">
                                <label for= "sender-message" class= "field-label">Your Message</label> 
                                <textarea class= "form-field-body" name= "sender-message" id= "sender-message"></textarea> 
                            </div> 

                            <button class= "form-button send-message-button" type= "submit">Send Message</button> 
                        </form> 

                        <p class= "form-note">Or just write to <strong>order@biogame.biz</strong></p> 
                    </div> 
                </div>
            </div>

            
        </section> 

